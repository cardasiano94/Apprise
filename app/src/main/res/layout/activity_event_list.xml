<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.cgallegu.apprise.EventListActivity">
    <TextView
        android:id="@+id/activity_event_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_title"
        android:text="Eventos"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:textSize="@dimen/title_size"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_event_list_title">
        <ListView
            android:paddingLeft="@dimen/padding_card_view"
            android:paddingRight="@dimen/padding_card_view"
            android:id="@android:id/list"
            android:divider="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarStyle="outsideOverlay"/>
    </RelativeLayout>


</RelativeLayout>
